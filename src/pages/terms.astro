        </p>
      </section>
    </main>
  </div>
</Layout>

<style>
  .terms-page {
    max-width: 80rem;
    margin: 0 auto;
    padding: 1rem;
  }
  .page-header {
    text-align: center;
    padding: 4rem 1rem 2rem;
  }
  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }
  .meta {
    color: #6b7280;
  }
  .lede {
    max-width: 46rem;
    margin: 0.75rem auto 0;
    color: #4b5563;
  }
  .content {
    max-width: 64rem;
    margin: 0 auto;
    padding: 2rem 0 4rem;
    display: grid;
    gap: 2rem;
  }
  .content h2 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  [data-animate-on-scroll] {
    opacity: 0;
    transform: translateY(24px);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
  }
  [data-animate-on-scroll].is-visible {
    opacity: 1;
    transform: translateY(0);
  }
  @media (prefers-color-scheme: dark) {
    .meta,
    .lede {
      color: #9ca3af;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const els = document.querySelectorAll("[data-animate-on-scroll]");
    const io = new IntersectionObserver(
      (entries) =>
        entries.forEach((e) => {
          if (e.isIntersecting) {
            e.target.classList.add("is-visible");
            io.unobserve(e.target);
          }
        }),
      { threshold: 0.1 }
    );
    els.forEach((el) => io.observe(el));
  });
</script>
