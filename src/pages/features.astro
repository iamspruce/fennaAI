---
import Layout from "../layouts/Layout.astro";
import Feature from "../components/Feature.astro";

// Import images from your assets directory
import trainImg from "../assets/images/features/train.png";
import chatFilesImg from "../assets/images/features/files.png";
---

<Layout
  title="Features | FennaAI"
  description="FennaAI is your personal AI that runs locally, learns from your data, and keeps everything private. No cloud, no lock-in — just your AI, your way."
>
  <div class="features-page max-w-6xl mx-auto px-4">
    <header data-animate-on-scroll>
      <h1>Features that Put <em>You</em> in Control</h1>
      <p class="intro">
        FennaAI is built for everyday people, not just developers. Train, chat,
        and customize your own AI — all on your computer, all in private.
      </p>
    </header>

    <section>
      <Feature
        title="Train AI on Your Data"
        description="Finally, you can teach AI without needing a PhD. Upload your files or notes, and with a few clicks, FennaAI trains the model so it understands your voice, your business, and your way of thinking. No cloud, no experts required."
      />

      <Feature
        title="Chat with Your Files"
        description="Skip the training step and just drop in your files. PDFs, notes, or business documents — FennaAI instantly answers questions and helps you make sense of your data privately."
        reverse
      />

      <Feature
        title="100+ Free AI Models"
        description="Pick from a growing library of models, from lightweight ones that run on everyday laptops to advanced ones that rival GPT-4. If your system can handle it, you can run it."
      />

      <Feature
        title="Personalized & Private"
        description="Shape the way your AI thinks and responds. Adjust tone, style, and knowledge — and because it all runs locally, your data never leaves your computer."
        reverse
      />

      <Feature
        title="Simple API for Developers"
        description="For builders who want to go further, FennaAI includes a clean, lightweight API. Integrate your personal AI into apps, scripts, and workflows without the cloud."
      />
    </section>

    <section data-animate-on-scroll>
      <h2>Ready to Build Your Personal AI?</h2>
      <p>
        Train it. Chat with it. Make it yours. <br />
        Your AI — private, personal, and running on your machine.
      </p>
      <a
        href="/#download"
        class="download-button inline-block px-8 py-4 rounded-2xl shadow-lg text-lg font-semibold"
      >
        Download FennaAI
      </a>
    </section>
  </div>
</Layout>

<style>
  [data-animate-on-scroll] {
    opacity: 0;
    transform: translateY(40px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  [data-animate-on-scroll].is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .features-page {
    display: flex;
    flex-direction: column;
    gap: var(--space-s);
    padding: var(--space-s);
  }

  header,
  section {
    text-align: center;
  }

  header h1 {
    font-size: var(--step-5);
    font-weight: 700;
    line-height: 1.15;
    letter-spacing: -0.04em;
    margin-bottom: var(--space-m);
  }

  .intro {
    font-size: 1.25rem;
    color: #4b5563;
    max-width: 42rem;
    margin: 0 auto var(--space-l);
  }

  @media (prefers-color-scheme: dark) {
    .intro {
      color: #d1d5db;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const animatedElements = document.querySelectorAll(
      "[data-animate-on-scroll]"
    );

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("is-visible");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );

    animatedElements.forEach((el) => observer.observe(el));
  });
</script>
