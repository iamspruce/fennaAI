---
import Layout from "../layouts/Layout.astro";

// Update this if your legal entity name changes
const COMPANY_NAME = "FennaAI Labs, Inc.";
const LAST_UPDATED = "September 2, 2025";
---

<Layout
  title="Terms & Conditions | FennaAI"
  description="Read the Terms & Conditions for FennaAI — your private, personal AI that runs locally."
>
  <div class="terms-page">
    <header class="page-header" data-animate-on-scroll>
      <h1>Terms & Conditions</h1>
      <p class="meta">Last updated: {LAST_UPDATED}</p>
      <p class="lede">
        Welcome to FennaAI. Please read these Terms carefully. By downloading,
        installing, or using FennaAI, you agree to these Terms.
      </p>
    </header>

    <main class="content">
      <section data-animate-on-scroll>
        <h2>1. Who We Are</h2>
